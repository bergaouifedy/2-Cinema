{% extends 'base.html.twig' %}

{% block title %} Réservation  {% endblock %}
	{% block stylesheet %}
		<link href="{{asset('frontFolder/css/integration.css')}}" rel="stylesheet">

		
	{% endblock %}

{% block body %}



		<div class="bg_color_1">
			<div class="container margin_60_35">
              
              {% if message is defined %}

               <div class="alert alert-success alert-dismissible fade show" role="alert">
               {{message}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

              {% endif %}
            


				<div class="row">
					<div class="col-lg-12">
						<div class="box_cart">
						<table class="table table-striped cart-list">
							<thead>
								<tr>
									<th>
										Professionnel
									</th>
									<th>
										Lieux
									</th>
									<th>
										Du
									</th>
									<th>
										Au
									</th>

									<th>
										Total
									</th>

									<th>
										Date Réservation
									</th>
									<th>
										Société
									</th>

									<th>
										Status
									</th>
									<th>
										Actions
									</th>

								</tr>
							</thead>
							<tbody>

                           {% for res in res %}

								<tr>
									<td>

								{{res.client.lastname}} {{res.client.firstname}}

									</td>
									<td>
										{{res.adresse}}

									</td>
									<td>
										{{res.datedebut|date("d/m/Y")}}
									</td>
									<td>
									 {{res.datefin|date("d/m/Y")}}
									</td>
									<td>
										{{res.nomsociete}} 
										</td>
									<td>
									{{res.tarifTotal}} DT
									</td>

									<td>
									 {{res.datereservation|date("d/m/Y")}}
									</td>

									<td>
									 <span class="badge badge-primary"> {{res.etat}} </span>
									</td>

									<td>
										<a href="{{path('valider_res',{id: res.id})}})}}">Confirmer</a>
										<a href="{{path('refuser_res',{id: res.id})}})}}">refuser</a>

									</td>
								</tr>

							{% endfor %}
								
							</tbody>
						</table>
						
						<!-- /cart-options -->
					</div>
					</div>
					<!-- /col -->
					
				
				</div>
			

                		</div>
               

		</div>
		


{% endblock %}