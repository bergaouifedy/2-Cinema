{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello GestionAnnonceController!
{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}

	<div class="alert alert-success">
		{{message}}
	</div>
{% endfor %}
	<section id="main-content">
		<section class="wrapper">
			<div class="row mt">
				<div class="col-md-12">
					<div class="content-panel">
						<table class="table table-striped table-advance table-hover">
							<h4>
								<i class="fa fa-angle-right"></i>
								Tous les annonces</h4>
							<hr>
							<thead>
								<tr>
									<th>
										<i class="fa fa-bullhorn"></i>
										Titre</th>
									<th class="hidden-phone">
										<i class="fa fa-question-circle"></i>
										Descrition</th>
									<th>
										<i class="fa fa-bookmark"></i>
										prix</th>
									<th>
										<i class=" fa fa-edit"></i>
										Status</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
                                {% for annonce in annonces %}
								<tr>
									<td>
                                            {{annonce.titre}}
                                    </td>
									<td class="hidden-phone">{{annonce.description}}</td>
									<td>{{annonce.prix}}
									</td>
									<td>
                                        {% if annonce.status == 0 %}
										<span class="label label-info label-mini"> non validé</span>
                                        {% else %}
                                        <span class="label label-info label-mini">  validé</span>
                                        {% endif %}
									</td>
									<td>
										{% if annonce.status == 0 %}
										<a class="fa fa-check" href="{{path('valider',{id: annonce.id})}}" data-id="{{annonce.id}}"></a>
										{% endif %}
										<button class="btn btn-primary btn-xs">
											<i class="fa fa-pencil"></i>
										</button>
											<a class="fa fa-trash-o "href="{{path('annonce_delete_admin',{id: annonce.id})}}"></a>
									</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /content-panel -->
				</div>
				<!-- /col-md-12 -->
			</div>
			<!-- /row -->
		</section>
	</section>
{% endblock %}
