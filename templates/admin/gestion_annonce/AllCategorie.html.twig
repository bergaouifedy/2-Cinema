{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello GestionAnnonceController!
{% endblock %}

{% block body %}

	<section id="main-content">
		<section class="wrapper">
			<div class="row mt">
				<div class="col-md-12">
					<div class="content-panel">
						<table class="table table-striped table-advance table-hover">
							<h4>
								<i class="fa fa-angle-right"></i>
								Tous les categiries</h4>
							<hr>
							<thead>
								<tr>
									<th>
										<i class="fa fa-bullhorn"></i>
										Titre</th>
									<th class="hidden-phone">
										<i class="fa fa-question-circle"></i>
										Descrition</th>
								</tr>
							</thead>
							<tbody>
                                {% for cat in categorie %}
								<tr>
									<td>
                                            {{cat.titre}}
                                    </td>
									<td class="hidden-phone">{{cat.description}}</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /content-panel -->
				</div>
				<!-- /col-md-12 -->
			</div>
			<!-- /row -->
		</section>
	</section>
{% endblock %}
