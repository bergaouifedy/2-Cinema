{% extends 'base.html.twig' %}

{% block title %}ajout avis!{% endblock %}

{% block body %}
<style>
    body{
    margin-top:20px;
    color: #1a202c;
    text-align: left;
    background-color: #e2e8f0;    
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: .25rem;
}

.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}

.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}

.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}

.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}
</style>
<div class="container">
    <div class="main-body">
    
    </br>
     {{ form_start(form) }}
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                      <div>
                          <h3>Ajouter avis</h3>
                          <h3>Votre nom</h3>

                      </div>
                    <a href="#" type="button" class="btn btn-warning mt-3 btn-rounded waves-effect w-md waves-light">
                        {{ form_widget(form.nomcomplete) }}
                    </a>
                    <div class="mt-3">
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        
                        <table>
                            <tbody>
                            <tr>
                                <th>Email:</th>
                                <td>{{ form_widget(form.email) }}</td>
                            </tr>
                            <tr>
                                <th>Avis:</th>
                                <td>{{ form_widget(form.avis) }}</td>
                            </tr>
                            <tr>
                                <th>message:</th>
                                <td>{{ form_widget(form.message) }}</td>
                            </tr>
                            </tbody>
                            
                        </table>
                        <div class="p-t-20">
                            <input type="submit" class="btn btn--radius btn--green" value="valider">
                        </div>
                        {{ form_end(form) }}

                     
                    </div>


                </div>
              </div>


            </div>
          </div>

        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/images.js') }}"></script>
{% endblock %}
